package lecture1;
import java.util.*;
public class test_1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		for(int i=0;i<n;i++) {
			for(int j=1;j<=n-i;j++) {
				System.out.print(j);
			}
			System.out.println(" ");
			
		}
		for(int i=0;i<n;i++) {
			for(int j=n-i;j>0;j--) {
				System.out.print(j);
			}
			System.out.println(" ");
			
		}

	}

}
