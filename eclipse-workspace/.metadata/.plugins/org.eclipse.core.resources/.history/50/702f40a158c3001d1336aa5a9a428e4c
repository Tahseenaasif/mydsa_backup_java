package queue;

public class queues_temp {
			private int data[];
			private int front;
			private int rear;
			private int si;
			public queues_temp(int size){
				data=new int [size];
				si=size;
				front=-1;
				rear=-1;
				
			}
			public void enqueue(int element) throws queueEmptyException, queuefullException{
				 if((rear+1)%si==front) {
					 throw new queuefullException();
					 
				 }
				 if(front==-1) {
					 front=1;
					 rear=(rear+1)%si;
					 data[rear]=element;
					 
				 }
				 rear=(rear+1)%si;
				 data[rear]=element;
			}
			public int dequeue() throws queueEmptyException{
				  if(front==-1) {
					  throw new queueEmptyException();
					  
				  }   
				  
				  if(front==rear) {
					  int ans=data[front];
					  front=-1;
					  rear=-1;
					  return -1;
				  }
				    int res=data[front];
				  front=(front+1)%si;
				  return res;
				  		  
			}
			public int front() throws queueEmptyException{
			  if(front==-1){
					throw new queueEmptyException();   
				  
				}
			  return data[front];
			}
			public static void maint(String args[]) throws queueEmptyException, queuefullException {
				queues_temp q1=new queues_temp(20);
//				for(int i=0;i<20;i++) {
//					q1.enqueue(i);
//				}
//				for(int i=0;i<20;i++) {
//					System.out.print(q1.dequeue()+" ");
//				}
				System.out.print(q1.front());
			}
}
